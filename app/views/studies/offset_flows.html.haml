= form_tag studies_offset_flows_path, :method => 'get' do
  %p
    = label_tag 'Posting Date'
    = text_field_tag :posting_date, @posting_date
    = label_tag 'Account Code'
    = text_field_tag :account_code, @account_code
    = label_tag 'Tradeable Set Code'
    = text_field_tag :tradeable_set_code, @tradeable_set_code
    = label_tag 'Tradeable Code'
    = text_field_tag :tradeable_code, @tradeable_code
    = submit_tag "Search", :name => nil

%table
  %thead
    %tr
      %th Posted
      %th Account
      %th Set
      %th Code
      %th Out At
      %th Rule
      %th Done
      %th Price
      %th Flow
  %tbody
  - @offset_flows.each do |offset_flow|
    %tr
      %td= offset_flow['posting_date']
      %td= offset_flow['account_code']
      %td= offset_flow['tradeable_set_code']
      %td= offset_flow['tradeable_code']
      %td= offset_flow['out_at']
      %td= offset_flow['rule']
      %td= offset_flow['done']
      %td= offset_flow['price']
      %td= offset_flow['flow']
